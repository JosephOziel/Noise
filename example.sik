fi{"Kollatz"}. %name of file produced
te{0, 120}. %set the tempo to 120
pr{0, 0, 0, 1}. %make the instrument piano

time = 0.

fn! col[s]:
  no{0, 0, s, time, 0.5, 100} %play note at the time of duration 1/2 and volume 100
  w! s != 1:
    ?? (s % 2) == 0:
      s = s // 2
      no{0, 0, s, time, 0.5, 100}
    !! %elif would be ?!
      s = 3 * s + 1
      no{0, 0, s, time, 0.5, 100}
    !.
  !.
!.

col[7].